<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    tools:context=".ui.ui.layouts.LayoutActivity">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/grey"
                android:padding="@dimen/qb_px_20"
                android:layout_margin="@dimen/qb_px_10"
                />
            <TextView
                android:id="@+id/tv5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/grey"
                android:padding="@dimen/qb_px_20"
                android:layout_margin="@dimen/qb_px_10"
                />
            <TextView
                android:id="@+id/tv6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/grey"
                android:padding="@dimen/qb_px_20"
                android:layout_margin="@dimen/qb_px_10"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/grey"
                android:padding="@dimen/qb_px_20"
                android:layout_margin="@dimen/qb_px_10"
                />
            <TextView
                android:id="@+id/tvdelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:background="@color/grey"
                android:padding="@dimen/qb_px_20"
                android:layout_margin="@dimen/qb_px_10"
                />

        </LinearLayout>
    </LinearLayout>


    <TextView
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:id="@+id/tv_a"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_80"
        android:text="文字"
        android:textColor="@color/white"
        android:background="@color/grey"
        android:padding="@dimen/qb_px_20"
        android:layout_margin="@dimen/qb_px_10"
        />

    <TextView
        android:id="@+id/tv_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qb_px_10"
        android:background="@color/grey"
        android:padding="@dimen/qb_px_20"
        android:text="1"
        app:layout_constraintDimensionRatio="2:1"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_a"
        app:layout_constraintLeft_toRightOf="@id/tv_a" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_a"
        android:id="@+id/tv_c"
        android:layout_width="0dp"
        android:layout_marginLeft="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="@dimen/qb_px_40"
        android:text="文字2"
        android:textColor="@color/white"
        android:background="@color/grey"
        android:padding="@dimen/qb_px_20"
        android:layout_margin="@dimen/qb_px_20"
        />
    <TextView
        android:id="@+id/tv_d"
        app:layout_constraintCircle="@id/tv_c"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="@dimen/qb_px_150"
        app:layout_constraintTop_toBottomOf="@id/tv_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom_toBottom"
        android:textColor="@color/white"
        android:background="@color/grey"

        android:padding="@dimen/qb_px_20"
        android:layout_margin="@dimen/qb_px_20"
        />

    <TextView
        android:id="@+id/tv_e"
        app:layout_constraintLeft_toRightOf="@id/tv_d"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom_toBottomBottom_toBottomBottom_toBottomBottom_toBottom"
        android:textColor="@color/white"
        android:maxWidth="@dimen/qb_px_100"
        android:background="@color/grey"
        android:padding="@dimen/qb_px_5"
        android:layout_margin="@dimen/qb_px_10"
        />

    <TextView
        android:text="23"
        android:layout_margin="@dimen/qb_px_15"
        android:layout_width="wrap_content"
        android:background="@color/grey"
        android:padding="@dimen/qb_px_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"></TextView>


    <LinearLayout
        android:id="@+id/line2"
        app:layout_constraintTop_toBottomOf="@id/tv_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/grey"
            android:padding="@dimen/qb_px_20"
            android:layout_margin="@dimen/qb_px_10"
            />
        <TextView
            android:id="@+id/tv8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/grey"
            android:padding="@dimen/qb_px_20"
            android:layout_margin="@dimen/qb_px_10"
            />
        <TextView
            android:id="@+id/tv9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/grey"
            android:padding="@dimen/qb_px_20"
            android:layout_margin="@dimen/qb_px_10"
            />

    </LinearLayout>

    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:text="ssss"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:id="@+id/TextView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/TextView2" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="88dp"
        android:text="ssss"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/TextView1"
        app:layout_constraintRight_toLeftOf="@+id/TextView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2" />

    <TextView
        app:layout_constraintHorizontal_weight="1"

        app:layout_constraintTop_toBottomOf="@id/line2"
        android:text="ssss"
        android:id="@+id/TextView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/TextView2"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/tvq"
        app:layout_constraintTop_toBottomOf="@id/TextView1"
        android:text="A"
        android:background="@color/grey"
        android:layout_width="@dimen/qb_px_60"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tvw"
        app:layout_constraintTop_toBottomOf="@id/tvq"
        android:text="B"
        android:background="@color/grey"

        android:layout_width="@dimen/qb_px_30"
        android:layout_height="wrap_content"></TextView>


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tvq,tvw" />


    <TextView
        android:id="@+id/tve"
        android:text="C"
        android:background="@color/gainsboro"

        app:layout_constraintTop_toBottomOf="@id/TextView2"
        app:layout_constraintLeft_toRightOf="@id/barrier"
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="wrap_content"></TextView>



    <androidx.constraintlayout.widget.Placeholder
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:content="@+id/textview"
        android:background="@color/grey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:padding="16dp"
        android:visibility="gone"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"  />

        <TextView
            android:text="ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>