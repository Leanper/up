<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:leanper="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.leanper.jetpackdemo.weight.View1
        leanper:max="30"
        leanper:step="5"
        leanper:min="-10"
        leanper:defaultValue="0"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       ></com.leanper.jetpackdemo.weight.View1>

    <com.leanper.jetpackdemo.weight.HouseSmile
        leanper:eyeColor="@color/blue"
        leanper:mouthColor="@color/teal"
        leanper:outerColor="@color/palegreen"
        android:layout_gravity="center_horizontal"
        android:id="@+id/HouseSmile"
        leanper:strokeValue="10"
        android:layout_width="@dimen/qb_px_200"
        android:layout_height="wrap_content"></com.leanper.jetpackdemo.weight.HouseSmile>
    
    

</LinearLayout>